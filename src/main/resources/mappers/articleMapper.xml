<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gzw.mappers.ArticleMapper">

    <delete id="delete" parameterType="Integer">
        delete from article where id=#{id}
    </delete>

    <select id="findById" resultType="Article" parameterType="Integer">
        select * from article where id = #{id}
    </select>

    <!--获取文章数量-->
    <select id="getArticleCount" resultType="Integer" parameterType="String">
        select count(*) from article where username = #{username}
    </select>

    <!--获取标签数量-->
    <select id="getTagCount" resultType="Integer" parameterType="String">
        select count(distinct(tag)) from article where username = #{username}
    </select>

    <!--获取标签列表-->
    <select id="getArticleClassList" resultMap="articleResultMap" parameterType="String">
        select tag,count(tag) as articleCount from article  where username =#{username} group by tag
    </select>

    <!--获取文章存档-->
    <select id="getArticlePigeonhle" resultMap="articlePigeonhole" parameterType="String">
        select count(*) as totle, date_format(date_create, '%Y-%m') as dates from article group by date_format(date_create, '%Y-%m');
    </select>



    <select id="findByAuthor" resultType="Article" parameterType="String">
        select * from article where author = #{author}
    </select>

    <select id="findByTitle" resultType="Article" parameterType="String">
        select * from article where title = #{title}
    </select>

    <select id="findByTag" resultType="Article" parameterType="String">
        select * from article where tag = #{tag}
    </select>

    <insert id="insert" parameterType="Article">
        INSERT INTO article(author,tag,data_created,title,username,content) VALUES (#{author},#{tag},#{data_created},#{title},#{username},,#{content})
    </insert>

    <resultMap id="articleResultMap" type="ArticleClass">
        <result property="categoryName" column="tag"/>
        <result property="articleCount" column="articleCount"/>
    </resultMap>

    <resultMap id="articlePigeonhole" type="ArticlePigeonhole">
        <result property="createTime" column="dates"/>
        <result property="count" column="totle"/>
    </resultMap>
</mapper>